---
interface Props {
  title?: string;
  text?: string;
  btnText?: string;
  href?: string;
}

const { 
  title = "Ready to discuss your case?", 
  text = "Contact The CKB Firm today for a secure, confidential consultation regarding your commercial litigation or debt recovery needs.",
  btnText = "Contact Us",
  href = "/contact"
} = Astro.props;
---

<section class="bg-white py-16 border-t border-gray-100">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 text-center">
    <h2 class="text-3xl font-serif font-bold text-primary mb-4">{title}</h2>
    <p class="text-slate-text text-lg mb-8 max-w-2xl mx-auto">{text}</p>
    <a href={href} class="inline-block px-8 py-4 bg-primary text-white font-medium rounded shadow-md hover:bg-primary-dark transition-transform hover:-translate-y-1">
      {btnText}
    </a>
  </div>
</section>
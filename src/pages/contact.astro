---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout 
  title="Contact The CKB Firm | Chicago Legal Office"
  description="Get in touch with The CKB Firm in Chicago for commercial litigation and collection needs. Secure, confidential, and responsive."
>
  <section class="bg-primary text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-6">Contact Us</h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Reach out to our Chicago team for expert assistance with your commercial legal needs.
      </p>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16">
    <div class="grid lg:grid-cols-2 gap-16">
      <!-- Contact Info -->
      <div>
        <h2 class="text-3xl font-serif font-bold text-primary mb-8">Get In Touch</h2>
        <p class="text-lg text-slate-text mb-8">
          Whether you are a financial institution needing volume collections or a business facing a contract dispute, The CKB Firm is ready to assist. Please complete the form or contact us directly.
        </p>

        <div class="space-y-8">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-primary text-white rounded flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-lg font-bold text-primary">Office Location</h3>
              <p class="text-slate-text">
                111 West Washington Street<br />
                Suite 1500<br />
                Chicago, IL 60602
              </p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-primary text-white rounded flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-lg font-bold text-primary">Phone & Fax</h3>
              <p class="text-slate-text">
                Phone: (312) 555-0123<br />
                Fax: (312) 555-0124
              </p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-primary text-white rounded flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-lg font-bold text-primary">Office Hours</h3>
              <p class="text-slate-text">
                Monday - Friday: 8:30 AM - 5:30 PM<br />
                Saturday - Sunday: Closed
              </p>
            </div>
          </div>
        </div>

        <!-- Map Embed Placeholder -->
        <div class="mt-12 h-64 bg-gray-200 rounded-lg overflow-hidden">
          <iframe 
            width="100%" 
            height="100%" 
            frameborder="0" 
            scrolling="no" 
            marginheight="0" 
            marginwidth="0" 
            src="https://maps.google.com/maps?q=111%20West%20Washington%20Street%20Chicago%20IL&t=&z=13&ie=UTF8&iwloc=&output=embed"
            title="Office Map"
          ></iframe>
        </div>
      </div>

      <!-- Form -->
      <div>
        <div class="bg-off-white p-8 rounded-xl shadow-lg">
           <h3 class="text-2xl font-serif font-bold text-primary mb-6">Send a Message</h3>
           <ContactForm />
        </div>
      </div>
    </div>
  </div>
</Layout>